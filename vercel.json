{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    { "src": "public/*.html", "use": "@vercel/static" }
  ],
  "routes": [
    { "handle": "filesystem" },
    {
      "src": "routes/(.*)",
      "dest": "routes/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/server.js"
    }
  ]
}