{
  "version": 2,
  "builds": [
    { "src": "*.html", "use": "@vercel/static" },
    { "src": "*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "handle": "filesystem" },
    {
      "src": "routes/(.*)",
      "dest": "routes/$1"
    },
    {
      "src": "/(.*)",
      "dest": "public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/server.js"
    }
  ]
}